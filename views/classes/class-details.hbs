<div class="row">

<div class="col-sm-3">
  <h2>Class Details</h2>
<div class="card" style="width: 18rem;">
  <img src="{{foundClass.image}}" style="width: 100%; height: 15vw; object-fit:cover" class="card-img-top" alt="...">
  <div class="card-body">
    <h5 class="card-title">{{foundClass.className}}</h5>
    <p class="card-text">{{foundClass.description}}</p>
     <p class="card-text"><b>Duration:</b> {{foundClass.duration}} min</p>
    <p class="card-text"><b>Date:</b> {{foundClass.date}}</p>
        <p class="card-text"><b>Attendees:</b> {{foundClass.attendees.length}}</p>


{{#if isBooked}}
    <form action="/classes/{{foundClass._id}}/cancel-class" method="post">
        <button class="btn btn-primary" type="submit">Cancel Class</button>
</form>
{{/if}}
{{#if isNotBooked}}
      <form action="/classes/{{foundClass._id}}/book-class" method="post">
        <button class="btn btn-primary" type="submit">Book Class</button>
      </form>
{{/if}}  

{{#if isOwner}}
      <form action="/classes/{{foundClass._id}}/edit-class" method="get">
        <button class="btn btn-primary" type="submit">Edit Class</button>
      </form>

            <form action="/classes/{{foundClass._id}}/delete-class" method="post">
        <button class="btn btn-primary" type="submit">Delete Class</button>
      </form>
{{/if}}

</div>



</div>
</div>

<div class="col-sm-3">
<h2>Your instructor</h2>
<div class="card" style="width: 18rem;">
  <img src="{{foundClassInstructor.imageUrl}}" style="width: 100%; height: 15vw; object-fit:cover" class="card-img-top" alt="...">
  <div class="card-body">
    <h5 class="card-title">{{foundClassInstructor.fullName}}</h5>
    <p class="card-text"><b>Instructiong since:</b> {{foundClassInstructor.startedInstructing}}</p>
    <p class="card-text"><i>{{foundClassInstructor.aboutInstructor}}</i></p>

</div>
</div>
</div>

