<div id="carouselExampleCaptions" class="carousel slide">
  <div class="carousel-indicators">
    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
    {{!-- <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button> --}}
  </div>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img src="images/outdoor.jpeg" class="d-block w-100" alt="outdoor fitness">
 
      <div style="margin-bottom: 350px" class="carousel-caption d-none d-md-block">
           <h1 style="color: white">Iron Sports Club</h1>
        

{{#if isLoggedOut}}
<h5 style="color: white">The app for all your fitness needs</h5>
        <p style="color: white">Sign up to offer or book classes!</p>

          <a class="btn btn-primary" href="/auth/signup">Signup</a>
          <a class="btn btn-primary" href="/auth/login">Login</a>

  {{else}}
  <h5 style="color: white">Manage your classes from your profile or browse through all offers.</h5>
     <a class="btn btn-primary" href="/auth/profile">See your profile</a>
          <a class="btn btn-primary" href="/classes/list">Browse classes</a>

{{/if}}
      </div>
    </div>
    <div class="carousel-item">
      <img src="images/yoga.jpeg" class="d-block w-100" alt="yoga">
      <div style="margin-bottom: 350px" class="carousel-caption d-none d-md-block">
                <h1 style="color: white">Iron Sports Club</h1>
<h5 style="color: white">The app for all your fitness needs</h5>
        <p style="color: white">Sign up to offer or book classes!</p>

{{#if isLoggedOut}}
        <a class="btn btn-primary" href="/auth/signup">Signup</a>
          <a class="btn btn-primary" href="/auth/login">Login</a>
     {{else}}
     <a class="btn btn-primary" href="/auth/profile">See your profile</a>
          <a class="btn btn-primary" href="/classes/list">Browse classes</a>
     
     {{/if}}


      </div>
    </div>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>
