<h1>Hey {{foundUser.fullName}}</h1>


    <a class="btn btn-primary" href="/classes/list">Browse classes</a>


{{#if isInstructor}}

    <a class="btn btn-primary" href="/classes/create-class">Create new class</a>

{{/if}}
<br></br>
{{!-- change title based on user role --}}
{{#if isInstructor}}

    <h2>
        Your created classes
    </h2>

{{else}}
    <h2>
        Your booked classes
    </h2>
{{/if}}


<div class="row">
{{#each foundUser.classes}}
<div class="col-sm-3">

{{!-- style="width: 18rem;" --}} 

<div class="card" style="width: 100%; height: 15vw; object-fit:cover">  

  <img src="{{this.image}}" class="card-img-top" alt="...">
  <div class="card-body">
    <h5 class="card-title">{{this.className}}</h5>
    <p class="card-text">{{this.description}}</p>
     <p class="card-text"><b>Duration:</b> {{this.duration}} min</p>
    <p class="card-text"><b>Date:</b> {{this.date}}</p>
        <p class="card-text"><b>Attendees:</b> {{this.attendees.length}}</p>

    <a href="/classes/{{_id}}/class-details" class="btn btn-primary">View details</a>
  </div>
</div>
</div>

{{/each}}
</div>
