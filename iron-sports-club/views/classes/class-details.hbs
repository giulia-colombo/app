<h1>class details Page</h1>

<p>{{foundClass.className}}</p>
<p>{{foundClass.description}}</p>
{{#if isInstructor}}
<a href="/classes/{{id}}/edit-class"><button>Edit</button></a>
<form action="/classes/{{id}}/delete" method="post">
    <button type="submit">Delete</button>
</form>

{{else}}
    <form action="/classes/:id/cancel-class" method="post">
        <button type="submit">Cancel Class</button>
</form>
      <form action="/classes/:id/book-class" method="post">
        <button type="submit">Book Class</button>
      </form>

{{/if}}